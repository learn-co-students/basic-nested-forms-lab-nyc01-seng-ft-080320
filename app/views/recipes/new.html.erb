<%= form_for @recipe do |form| %>
<%= form.label :title %><br>
<%= form.text_field :title %><br>
    <%= form.fields_for :ingredients do |ing|%><br>
        <%= ing.label :name %><br>
        <%= ing.text_field :name %><br>
        <%= ing.label :quantity %><br>
        <%= ing.text_field :quantity %><br>
    <% end %><br>
    <%= form.submit %><br>
<% end %>


